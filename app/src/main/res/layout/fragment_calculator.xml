<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        grid:useDefaultMargins="false"
        grid:alignmentMode="alignBounds"
        android:layout_marginTop="50dp"
        grid:columnCount="4"
        grid:rowCount="6">

    <!-- Row 1 -->
    <TextView
            android:id="@+id/result"
            android:minHeight="10dp"
            android:maxWidth="@android:dimen/thumbnail_width"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:textSize="20sp"
            grid:layout_row="0"
            grid:layout_column="0"
            grid:layout_columnSpan="3"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="1"/>

    <Button
            android:id="@+id/cancel"
            android:text="C"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="0"
            grid:layout_column="3"
            grid:layout_rowSpan="2"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="1"/>

    <TextView
            android:id="@+id/expression"
            android:minHeight="40dp"
            android:maxWidth="@android:dimen/thumbnail_width"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:textSize="20sp"
            grid:layout_row="1"
            grid:layout_column="0"
            grid:layout_columnSpan="3"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="1"/>

    <!-- Row 2 -->
    <Button
            android:id="@+id/seven"
            android:text="7"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="2"
            grid:layout_column="0"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/eight"
            android:text="8"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="2"
            grid:layout_column="1"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/nine"
            android:text="9"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="2"
            grid:layout_column="2"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/divide"
            android:text="/"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="2"
            grid:layout_column="3"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <!-- Row 3 -->
    <Button
            android:id="@+id/four"
            android:text="4"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="3"
            grid:layout_column="0"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/five"
            android:text="5"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="3"
            grid:layout_column="1"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/six"
            android:text="6"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="3"
            grid:layout_column="2"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>
    <Button
            android:id="@+id/multiply"
            android:text="*"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="3"
            grid:layout_column="3"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <!-- Row 4 -->
    <Button
            android:id="@+id/one"
            android:text="1"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="4"
            grid:layout_column="0"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/two"
            android:text="2"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="4"
            grid:layout_column="1"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/three"
            android:text="3"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="4"
            grid:layout_column="2"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/minus"
            android:text="-"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="4"
            grid:layout_column="3"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <!-- Row 5 -->
    <Button
            android:id="@+id/zero"
            android:text="0"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"
            grid:layout_row="5"
            grid:layout_column="0"
            grid:layout_columnSpan="2"/>

    <Button
            android:id="@+id/equally"
            android:text="="
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="5"
            grid:layout_column="2"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

    <Button
            android:id="@+id/plus"
            android:text="+"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            grid:layout_row="5"
            grid:layout_column="3"
            grid:layout_columnWeight="0.5"
            grid:layout_rowWeight="0.5"/>

</android.support.v7.widget.GridLayout>